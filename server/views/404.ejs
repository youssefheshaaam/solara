<%- include('../partials/head.ejs', { title: typeof title !== 'undefined' ? title : 'Page Not Found - SOLARA' }) %>

<%- include('../partials/nav.ejs') %>

    <div class="error-page" style="min-height: 60vh; display: flex; align-items: center; justify-content: center; padding: 4rem 2rem;">
        <div class="container" style="text-align: center;">
            <h1 style="font-size: 6rem; margin-bottom: 1rem; color: var(--accent-color);">404</h1>
            <h2 style="font-size: 2rem; margin-bottom: 1rem;">Page Not Found</h2>
            <p style="color: var(--text-secondary); margin-bottom: 2rem; font-size: 1.1rem;">
                <%= typeof message !== 'undefined' ? message : 'The page you are looking for does not exist.' %>
            </p>
            <div style="display: flex; gap: 1rem; justify-content: center; flex-wrap: wrap;">
                <a href="/" class="btn btn-primary">Go Home</a>
                <a href="javascript:history.back()" class="btn btn-outline">Go Back</a>
            </div>
        </div>
    </div>

