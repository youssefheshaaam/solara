<%- include('../partials/head.ejs', { title: typeof title !== 'undefined' ? title : 'My Wishlist - SOLARA' }) %>

<%- include('../partials/nav.ejs', { currentPage: 'wishlist' }) %>

    <div class="wishlist-page" style="padding: 2rem 0 4rem; min-height: 80vh;">
        <div class="container">
            <div class="page-header" style="text-align: center; margin-bottom: 3rem;">
                <h1>My Wishlist</h1>
                <p>Your favorite products</p>
            </div>
            
            <div class="products-grid" id="wishlist-grid">
                <% if (typeof wishlist !== 'undefined' && wishlist.length > 0) { %>
                    <% wishlist.forEach(product => { %>
                        <div class="product-card" data-product-id="<%= product._id %>">
                            <div class="product-image">
                                <% if (product.comparePrice) { %>
                                    <div class="sale-badge">SALE</div>
                                <% } %>
                                <button class="wishlist-btn active" onclick="removeFromWishlistPage('<%= product._id %>', this); return false;" title="Remove from wishlist">
                                    <i class="fas fa-heart"></i>
                                </button>
                                <img src="<%= product.imageUrl %>" alt="<%= product.name %>" onerror="this.style.display='none';">
                            </div>
                            <div class="product-card-content">
                                <p class="category"><%= product.category.charAt(0).toUpperCase() + product.category.slice(1) %></p>
                                <h3><a href="/product/<%= product._id %>"><%= product.name %></a></h3>
                                <p class="price">EGP <%= product.price.toFixed(2) %></p>
                                <div class="product-actions">
                                    <button class="btn btn-primary btn-add-to-cart" data-product-id="<%= product._id %>" onclick="event.stopPropagation();">
                                        <i class="fas fa-shopping-cart"></i>
                                        Add to Cart
                                    </button>
                                    <button class="btn btn-outline remove-from-wishlist-btn" onclick="removeFromWishlistPage('<%= product._id %>', this); return false;" title="Remove from wishlist">
                                        <i class="fas fa-trash"></i>
                                        Remove
                                    </button>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <div class="empty-state" style="grid-column: 1 / -1; text-align: center; padding: 4rem 2rem;">
                        <i class="fas fa-heart" style="font-size: 4rem; color: #ccc; margin-bottom: 1rem;"></i>
                        <h3>Your wishlist is empty</h3>
                        <p>Add products to your wishlist to save them for later</p>
                        <a href="/" class="btn btn-primary" style="margin-top: 1rem;">Start Shopping</a>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

<%- include('../partials/footer.ejs') %>

<style>
    /* Make product cards clickable */
    .product-card {
        cursor: pointer;
        transition: transform 0.2s ease;
    }
    
    .product-card:hover {
        transform: translateY(-4px);
    }
    
    .product-actions {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }
    
    .remove-from-wishlist-btn {
        width: 100%;
        background: #fff;
        border: 1px solid #e0e0e0;
        color: #666;
        padding: var(--spacing-md) var(--spacing-xl);
        font-size: var(--font-size-sm);
        font-weight: 500;
        text-transform: uppercase;
        letter-spacing: 0.1em;
    }
    
    .remove-from-wishlist-btn:hover {
        background: #fee;
        border-color: #fcc;
        color: #c33;
    }
    
    .wishlist-btn.active {
        background: #e91e63;
        color: white;
    }
</style>

<script>
    // Setup product card click handlers for wishlist
    document.addEventListener('DOMContentLoaded', async function() {
        // Load wishlist for guests (if no server-rendered items)
        const wishlistGrid = document.getElementById('wishlist-grid');
        const hasServerItems = wishlistGrid.querySelectorAll('.product-card').length > 0;
        
        if (!hasServerItems) {
            // Load from localStorage for guests
            await loadGuestWishlist();
        }
        
        // Use event delegation for product cards
        document.addEventListener('click', function(e) {
            const productCard = e.target.closest('.product-card');
            if (productCard && !e.target.closest('button') && !e.target.closest('.btn')) {
                const productId = productCard.dataset.productId;
                if (productId) {
                    window.location.href = `/product/${productId}`;
                }
            }
        });
        
        // Also call the existing function if available
        if (typeof setupProductCardEvents === 'function') {
            setupProductCardEvents();
        }
        
        // Update wishlist count on page load
        if (typeof updateWishlistCount === 'function') {
            updateWishlistCount();
        }
    });
    
    // Load wishlist from localStorage for guests
    async function loadGuestWishlist() {
        try {
            const wishlistIds = JSON.parse(localStorage.getItem('fashionStoreWishlist') || '[]');
            if (wishlistIds.length === 0) {
                return; // Already showing empty state
            }
            
            const wishlistGrid = document.getElementById('wishlist-grid');
            wishlistGrid.innerHTML = '<div style="grid-column: 1 / -1; text-align: center; padding: 2rem;"><i class="fas fa-spinner fa-spin"></i> Loading wishlist...</div>';
            
            // Fetch product details for each wishlist item
            const products = [];
            for (const productId of wishlistIds) {
                try {
                    const response = await fetch(`/api/products/${productId}`);
                    if (response.ok) {
                        const product = await response.json();
                        if (product.success && product.data && product.data.status === 'active') {
                            products.push(product.data);
                        }
                    }
                } catch (error) {
                    console.error(`Error fetching product ${productId}:`, error);
                }
            }
            
            if (products.length === 0) {
                wishlistGrid.innerHTML = `
                    <div class="empty-state" style="grid-column: 1 / -1; text-align: center; padding: 4rem 2rem;">
                        <i class="fas fa-heart" style="font-size: 4rem; color: #ccc; margin-bottom: 1rem;"></i>
                        <h3>Your wishlist is empty</h3>
                        <p>Add products to your wishlist to save them for later</p>
                        <a href="/" class="btn btn-primary" style="margin-top: 1rem;">Start Shopping</a>
                    </div>
                `;
                return;
            }
            
            // Render products
            const productsHTML = products.map(product => {
                const imageUrl = product.imageUrl || (product.image ? `/uploads/${product.image}` : '/images/placeholder.jpg');
                const category = product.category || 'fashion';
                const saleBadge = product.comparePrice ? '<div class="sale-badge">SALE</div>' : '';
                
                return `
                    <div class="product-card" data-product-id="${product._id}">
                        <div class="product-image">
                            ${saleBadge}
                            <button class="wishlist-btn active" onclick="removeFromWishlistPage('${product._id}', this); return false;" title="Remove from wishlist">
                                <i class="fas fa-heart"></i>
                            </button>
                            <img src="${imageUrl}" alt="${product.name}" onerror="this.style.display='none';">
                        </div>
                        <div class="product-card-content">
                            <p class="category">${category.charAt(0).toUpperCase() + category.slice(1)}</p>
                            <h3><a href="/product/${product._id}">${product.name}</a></h3>
                            <p class="price">EGP ${product.price.toFixed(2)}</p>
                            <div class="product-actions">
                                <button class="btn btn-primary btn-add-to-cart" data-product-id="${product._id}" onclick="event.stopPropagation();">
                                    <i class="fas fa-shopping-cart"></i>
                                    Add to Cart
                                </button>
                                <button class="btn btn-outline remove-from-wishlist-btn" onclick="removeFromWishlistPage('${product._id}', this); return false;" title="Remove from wishlist">
                                    <i class="fas fa-trash"></i>
                                    Remove
                                </button>
                            </div>
                        </div>
                    </div>
                `;
            }).join('');
            
            wishlistGrid.innerHTML = productsHTML;
            
        } catch (error) {
            console.error('Error loading guest wishlist:', error);
        }
    }
    
    // Remove from wishlist function for wishlist page
    async function removeFromWishlistPage(productId, btn) {
        if (!productId) return;
        
        // Show loading state
        const originalHTML = btn.innerHTML;
        btn.disabled = true;
        btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i>';
        
        try {
            // Check if user is logged in
            const isLoggedIn = typeof AuthAPI !== 'undefined' && AuthAPI.isLoggedIn();
            
            if (isLoggedIn) {
                // Use API for logged-in users
                if (typeof UsersAPI !== 'undefined') {
                    const user = AuthAPI.getCurrentUser();
                    const response = await UsersAPI.removeFromWishlist(productId);
                    
                    if (response && response.success) {
                        // Update localStorage to sync
                        const wishlist = JSON.parse(localStorage.getItem('fashionStoreWishlist') || '[]');
                        const filteredWishlist = wishlist.filter(id => 
                            String(id) !== String(productId)
                        );
                        localStorage.setItem('fashionStoreWishlist', JSON.stringify(filteredWishlist));
                    }
                }
            } else {
                // Use localStorage for guests
                if (typeof window.removeFromWishlist === 'function') {
                    await window.removeFromWishlist(productId);
                } else {
                    // Fallback: manual localStorage update
                    const wishlist = JSON.parse(localStorage.getItem('fashionStoreWishlist') || '[]');
                    const filteredWishlist = wishlist.filter(id => 
                        String(id) !== String(productId)
                    );
                    localStorage.setItem('fashionStoreWishlist', JSON.stringify(filteredWishlist));
                }
            }
            
            // Remove the product card from the DOM
            const productCard = btn.closest('.product-card');
            if (productCard) {
                productCard.style.transition = 'opacity 0.3s ease, transform 0.3s ease';
                productCard.style.opacity = '0';
                productCard.style.transform = 'scale(0.9)';
                
                setTimeout(() => {
                    productCard.remove();
                    
                    // Check if wishlist is now empty
                    const remainingCards = document.querySelectorAll('.product-card');
                    if (remainingCards.length === 0) {
                        // Reload page to show empty state
                        window.location.reload();
                    }
                }, 300);
            }
            
            // Update wishlist count
            if (typeof updateWishlistCount === 'function') {
                updateWishlistCount();
            }
            
            // Show success notification
            if (typeof showNotification === 'function') {
                showNotification('Removed from wishlist', 'success');
            } else {
                alert('Removed from wishlist');
            }
            
        } catch (error) {
            console.error('Error removing from wishlist:', error);
            btn.disabled = false;
            btn.innerHTML = originalHTML;
            
            // Show error notification
            if (typeof showNotification === 'function') {
                showNotification('Failed to remove from wishlist', 'error');
            } else {
                alert('Failed to remove from wishlist');
            }
        }
    }
    
    // Make function globally available
    window.removeFromWishlistPage = removeFromWishlistPage;
</script>

