<script>
    function selectPayment(element) {
        document.querySelectorAll('.payment-option').forEach(opt => opt.classList.remove('selected'));
        element.classList.add('selected');
        element.querySelector('input[type="radio"]').checked = true;
    }
    
    // Lightweight helper for real-time validation hints
    function addCheckoutLiveValidation(inputId, message, hint) {
        const input = document.getElementById(inputId);
        const hintEl = document.createElement('div');
        hintEl.className = 'field-hint';
        hintEl.style.fontSize = '0.8rem';
        hintEl.style.marginTop = '0.25rem';
        hintEl.style.color = '#777';
        hintEl.textContent = hint || '';
        
        if (input && input.parentElement && input.parentElement.parentElement) {
            const group = input.parentElement.parentElement.classList.contains('form-group')
                ? input.parentElement.parentElement
                : input.parentElement;
            group.appendChild(hintEl);
        }
        
        function validate() {
            const value = input.value.trim();
            if (!value) {
                hintEl.textContent = hint || '';
                hintEl.style.color = '#777';
                return;
            }
            const isValid = typeof message.validator === 'function' ? message.validator(value) : true;
            if (isValid === true) {
                hintEl.textContent = hint || '';
                hintEl.style.color = '#777';
            } else {
                hintEl.textContent = typeof isValid === 'string' ? isValid : (message.text || 'Invalid value');
                hintEl.style.color = '#c33';
            }
        }
        
        if (input) {
            input.addEventListener('input', validate);
            input.addEventListener('blur', validate);
        }
    }
    
    document.addEventListener('DOMContentLoaded', function() {
        // Prefill checkout form with saved user data/address if available
        try {
            const user = (typeof AuthAPI !== 'undefined' && AuthAPI.getCurrentUser && AuthAPI.getCurrentUser()) ||
                         JSON.parse(localStorage.getItem('currentUser') || localStorage.getItem('loggedInUser') || 'null');
            
            if (user) {
                const firstNameInput = document.getElementById('firstName');
                const lastNameInput = document.getElementById('lastName');
                const emailInput = document.getElementById('email');
                const phoneInput = document.getElementById('phone');
                const addressInput = document.getElementById('address');
                const cityInput = document.getElementById('city');
                const stateInput = document.getElementById('governorate');
                const zipInput = document.getElementById('zipCode');

                // Only prefill if field is currently empty, so user can override
                if (firstNameInput && !firstNameInput.value && user.firstName) firstNameInput.value = user.firstName;
                if (lastNameInput && !lastNameInput.value && user.lastName) lastNameInput.value = user.lastName;
                if (emailInput && !emailInput.value && user.email) emailInput.value = user.email;
                if (phoneInput && !phoneInput.value && user.phone) phoneInput.value = user.phone;

                if (user.addresses && user.addresses.length > 0) {
                    const addr = user.addresses.find(a => a.isDefault) || user.addresses[0];
                    if (addr) {
                        if (addressInput && !addressInput.value && addr.street) addressInput.value = addr.street;
                        if (cityInput && !cityInput.value && addr.city) cityInput.value = addr.city;
                        if (stateInput && !stateInput.value && addr.state) stateInput.value = addr.state;
                        if (zipInput && !zipInput.value && addr.zipCode) zipInput.value = addr.zipCode;
                    }
                }
            }
        } catch (err) {
            console.error('Error pre-filling checkout form:', err);
        }

        // Real-time validation on key fields
        addCheckoutLiveValidation('email', { 
            validator: (v) => /^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(v) || 'Enter a valid email (e.g. name@example.com)'
        }, 'Format: name@example.com');
        
        addCheckoutLiveValidation('phone', { 
            validator: (v) => /^\+?\d{10,15}$/.test(v) || 'Phone must be 10–15 digits (e.g. +201234567890)'
        }, 'Digits only, 10–15 characters (e.g. +201234567890)');
        
        addCheckoutLiveValidation('zipCode', { 
            validator: (v) => /^\d{5,10}$/.test(v) || 'Zip code must be 5–10 digits'
        }, 'Numbers only, 5–10 digits');

        // Checkout form handling - delegate to global handler in main.js
        const placeOrderBtn = document.getElementById('place-order-btn');
        
        if (placeOrderBtn && typeof handlePlaceOrder === 'function') {
            placeOrderBtn.addEventListener('click', handlePlaceOrder);
        } else if (!window.handlePlaceOrder) {
            console.error('handlePlaceOrder function not available');
        }
    });
</script>

