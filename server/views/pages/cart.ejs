<%- include('../partials/head.ejs', { title: typeof title !== 'undefined' ? title : 'Shopping Cart - SOLARA' }) %>

<style>
    .cart-page {
        min-height: 100vh;
        background: white;
        padding: 2rem 0 4rem;
    }
    
    .cart-header {
        text-align: center;
        margin-bottom: 3rem;
    }
    
    .cart-header h1 {
        font-size: 2.5rem;
        margin-bottom: 0.5rem;
        color: var(--text-primary);
    }
    
    .cart-header p {
        color: var(--text-secondary);
    }
    
    .cart-container {
        display: grid;
        grid-template-columns: 1fr 380px;
        gap: 2rem;
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 2rem;
        width: 100%;
    }
    
    @media (min-width: 1400px) {
        .cart-container {
            max-width: 1400px;
        }
    }
    
    @media (max-width: 968px) {
        .cart-container {
            grid-template-columns: 1fr;
            gap: 2rem;
        }
    }
    
    /* Cart Items Section */
    .cart-items-section {
        background: transparent;
        border-radius: 0;
        padding: 0;
        box-shadow: none;
    }
    
    .cart-items-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-bottom: 1rem;
        border-bottom: 2px solid #eee;
        margin-bottom: 2rem;
    }
    
    .cart-items-header h2 {
        font-size: 1.5rem;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }
    
    .item-count-badge {
        background: var(--accent-color);
        color: white;
        padding: 0.25rem 0.75rem;
        border-radius: 20px;
        font-size: 0.8rem;
    }
    
    .clear-cart-btn {
        background: none;
        border: none;
        color: #dc3545;
        cursor: pointer;
        font-size: 0.9rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }
    
    .clear-cart-btn:hover {
        text-decoration: underline;
    }
    
    /* Cart Item */
    .cart-item {
        display: grid;
        grid-template-columns: 150px 1fr auto;
        gap: 2rem;
        padding: 2rem 0;
        border-bottom: 1px solid #e0e0e0;
        align-items: center;
    }
    
    .cart-item:last-child {
        border-bottom: 2px solid #e0e0e0;
    }
    
    .cart-item-image {
        width: 150px;
        height: 180px;
        border-radius: 12px;
        overflow: hidden;
        background: #f5f5f5;
    }
    
    .cart-item-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
    
    .cart-item-details {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }
    
    .cart-item-name {
        font-weight: 600;
        font-size: 1.25rem;
        color: var(--text-primary);
        margin-bottom: 0.5rem;
    }
    
    .cart-item-name a {
        color: var(--text-primary);
        text-decoration: none;
    }
    
    .cart-item-name a:hover {
        color: var(--accent-color);
    }
    
    .cart-item-meta {
        display: flex;
        gap: 1.5rem;
        color: var(--text-secondary);
        font-size: 0.95rem;
        margin-bottom: 0.75rem;
    }
    
    .cart-item-price {
        font-weight: 600;
        color: var(--accent-color);
        font-size: 1.35rem;
    }
    
    .cart-item-actions {
        display: flex;
        flex-direction: column;
        align-items: flex-end;
        gap: 1.5rem;
    }
    
    /* Quantity Controls */
    .quantity-control {
        display: flex;
        align-items: center;
        border: 2px solid #e0e0e0;
        border-radius: 10px;
        overflow: hidden;
    }
    
    .qty-btn {
        width: 42px;
        height: 42px;
        border: none;
        background: #f5f5f5;
        cursor: pointer;
        font-size: 1.15rem;
        color: var(--text-primary);
        transition: all 0.2s;
    }
    
    .qty-btn:hover {
        background: var(--accent-color);
        color: white;
    }
    
    .qty-value {
        width: 60px;
        text-align: center;
        font-weight: 600;
        font-size: 1.1rem;
        border: none;
        background: white;
    }
    
    .remove-btn {
        background: none;
        border: none;
        color: #999;
        cursor: pointer;
        padding: 0.75rem 1rem;
        font-size: 0.95rem;
        transition: color 0.2s;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }
    
    .remove-btn:hover {
        color: #dc3545;
    }
    
    /* Order Summary */
    .order-summary {
        position: sticky;
        top: 2rem;
    }
    
    .summary-card {
        background: white;
        border-radius: 12px;
        padding: 2rem;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
        border: 1px solid #e0e0e0;
    }
    
    .summary-card h3 {
        font-size: 1.5rem;
        margin-bottom: 1.5rem;
        padding-bottom: 1rem;
        border-bottom: 2px solid #eee;
    }
    
    .summary-row {
        display: flex;
        justify-content: space-between;
        padding: 1rem 0;
        color: var(--text-secondary);
        font-size: 1rem;
    }
    
    .summary-row.total {
        border-top: 2px solid #eee;
        margin-top: 0.5rem;
        padding-top: 1.25rem;
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--text-primary);
    }
    
    .checkout-btn {
        width: 100%;
        padding: 1.25rem;
        margin-top: 1.5rem;
        font-size: 1.1rem;
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        font-weight: 600;
    }
    
    .continue-shopping {
        display: block;
        text-align: center;
        margin-top: 1rem;
        color: var(--text-secondary);
        text-decoration: none;
    }
    
    .continue-shopping:hover {
        color: var(--accent-color);
    }
    
    /* Features */
    .cart-features {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 1rem;
        margin-top: 1.5rem;
        padding-top: 1.5rem;
        border-top: 1px solid #eee;
    }
    
    .feature {
        text-align: center;
    }
    
    .feature i {
        font-size: 1.5rem;
        color: var(--accent-color);
        margin-bottom: 0.5rem;
    }
    
    .feature span {
        display: block;
        font-size: 0.75rem;
        color: var(--text-secondary);
    }
    
    /* Empty Cart */
    .empty-cart {
        text-align: center;
        padding: 4rem 2rem;
    }
    
    .empty-cart i {
        font-size: 5rem;
        color: #ddd;
        margin-bottom: 1.5rem;
    }
    
    .empty-cart h2 {
        font-size: 1.5rem;
        margin-bottom: 0.5rem;
    }
    
    .empty-cart p {
        color: var(--text-secondary);
        margin-bottom: 1.5rem;
    }
    
    /* Loading */
    .loading-cart {
        text-align: center;
        padding: 3rem;
    }
    
    .loading-cart i {
        font-size: 2rem;
        color: var(--accent-color);
        animation: spin 1s linear infinite;
    }
    
    @keyframes spin {
        to { transform: rotate(360deg); }
    }
    
    @media (max-width: 600px) {
        .cart-container {
            padding: 0 1rem;
        }
        
        .cart-items-section {
            padding: 1.5rem;
        }
        
        .cart-item {
            grid-template-columns: 100px 1fr;
            gap: 1rem;
            padding: 1.5rem 0;
        }
        
        .cart-item-image {
            width: 100px;
            height: 120px;
        }
        
        .cart-item-name {
            font-size: 1.1rem;
        }
        
        .cart-item-price {
            font-size: 1.2rem;
        }
        
        .cart-item-actions {
            grid-column: 1 / -1;
            flex-direction: row;
            justify-content: space-between;
            align-items: center;
            margin-top: 1rem;
        }
        
        .cart-features {
            grid-template-columns: 1fr;
        }
    }
</style>

<%- include('../partials/nav.ejs', { currentPage: 'cart' }) %>

    <!-- Cart Page -->
    <main class="cart-page">
        <div class="cart-header">
            <h1><i class="fas fa-shopping-cart"></i> <%= typeof __ !== 'undefined' ? __("cart.shoppingCart") : 'Shopping Cart' %></h1>
            <p><%= typeof __ !== 'undefined' ? __("cart.reviewItems") : 'Review your items and proceed to checkout' %></p>
        </div>
        
        <div class="cart-container">
            <!-- Cart Items -->
            <div class="cart-items-section">
                <div class="cart-items-header">
                    <h2><%= typeof __ !== 'undefined' ? __("cart.yourItems") : 'Your Items' %> <span class="item-count-badge" id="item-count"><%= typeof cart !== 'undefined' && cart.items ? cart.items.length : 0 %></span></h2>
                    <button class="clear-cart-btn" id="clear-cart-btn" onclick="clearCart()">
                        <i class="fas fa-trash"></i> <%= typeof __ !== 'undefined' ? __("cart.clearCart") : 'Clear Cart' %>
                    </button>
                </div>
                
                <div id="cart-items">
                    <% if (typeof cart !== 'undefined' && cart.items && cart.items.length > 0) { %>
                        <% cart.items.forEach(item => { %>
                            <div class="cart-item" data-product-id="<%= item.product._id %>">
                                <div class="cart-item-image">
                                    <img src="<%= item.product.imageUrl %>" alt="<%= item.product.name %>" onerror="this.src='/images/placeholder.jpg';">
                                </div>
                                <div class="cart-item-details">
                                    <div class="cart-item-name">
                                        <a href="/product/<%= item.product._id %>"><%= item.product.name %></a>
                                    </div>
                                    <div class="cart-item-meta">
                                        Size: <%= item.size || 'M' %> | Color: <%= item.color || 'Default' %>
                                    </div>
                                    <div class="cart-item-price">EGP <%= (item.price || item.product.price).toFixed(2) %></div>
                                </div>
                                <div class="cart-item-actions">
                                    <div class="quantity-control">
                                        <button class="qty-btn" onclick="updateCartQuantity('<%= item.product._id %>', -1)">âˆ’</button>
                                        <input type="number" class="qty-value" data-product-id="<%= item.product._id %>" value="<%= item.quantity %>" min="1" max="<%= item.product.stock || 10 %>" onchange="updateCartQuantity('<%= item.product._id %>', 0, this.value)">
                                        <button class="qty-btn" onclick="updateCartQuantity('<%= item.product._id %>', 1)">+</button>
                                    </div>
                                    <button class="remove-btn" onclick="removeFromCart('<%= item.product._id %>')">
                                        <i class="fas fa-trash"></i> Remove
                                    </button>
                                </div>
                            </div>
                        <% }); %>
                    <% } else { %>
                        <div class="empty-cart">
                            <i class="fas fa-shopping-cart"></i>
                            <h2>Your cart is empty</h2>
                            <p>Add some items to your cart to continue shopping</p>
                            <a href="/" class="btn btn-primary">Continue Shopping</a>
                        </div>
                    <% } %>
                </div>
            </div>
            
            <!-- Order Summary -->
            <div class="order-summary">
                <div class="summary-card">
                    <h3><%= typeof __ !== 'undefined' ? __("cart.orderSummary") : 'Order Summary' %></h3>
                    
                    <div class="summary-row">
                        <span><%= typeof __ !== 'undefined' ? __("cart.subtotal") : 'Subtotal' %></span>
                        <span id="subtotal">EGP <%= typeof cart !== 'undefined' && cart.subtotal ? cart.subtotal.toFixed(2) : '0.00' %></span>
                    </div>
                    <div class="summary-row">
                        <span><%= typeof __ !== 'undefined' ? __("cart.shipping") : 'Shipping' %></span>
                        <span id="shipping"><%= typeof __ !== 'undefined' ? __("cart.free") : 'FREE' %></span>
                    </div>
                    <div class="summary-row total">
                        <span><%= typeof __ !== 'undefined' ? __("cart.total") : 'Total' %></span>
                        <span id="total">EGP <%= typeof cart !== 'undefined' && cart.total ? cart.total.toFixed(2) : '0.00' %></span>
                    </div>
                    
                    <a href="/checkout" class="btn btn-primary checkout-btn" <%= typeof cart === 'undefined' || !cart.items || cart.items.length === 0 ? 'style="pointer-events: none; opacity: 0.5;"' : '' %>>
                        <i class="fas fa-lock"></i>
                        <%= typeof __ !== 'undefined' ? __("cart.proceedToCheckout") : 'Proceed to Checkout' %>
                    </a>
                    
                    <a href="/" class="continue-shopping">
                        <i class="fas fa-arrow-left"></i> <%= typeof __ !== 'undefined' ? __("cart.continueShopping") : 'Continue Shopping' %>
                    </a>
                    
                    <div class="cart-features">
                        <div class="feature">
                            <i class="fas fa-truck"></i>
                            <span>Free Shipping</span>
                        </div>
                        <div class="feature">
                            <i class="fas fa-shield-alt"></i>
                            <span>Secure</span>
                        </div>
                        <div class="feature">
                            <i class="fas fa-undo"></i>
                            <span>Easy Returns</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

<%- include('../partials/footer.ejs') %>

<script>
    async function updateCartQuantity(productId, change, value) {
        try {
            let newQuantity;
            if (value !== undefined && value !== null) {
                newQuantity = parseInt(value);
            } else {
                const input = document.querySelector(`[data-product-id="${productId}"] .qty-value`);
                if (input) {
                    newQuantity = parseInt(input.value) + (change || 0);
                } else {
                    throw new Error('Quantity input not found');
                }
            }
            
            if (newQuantity < 1) {
                newQuantity = 1;
            }
            
            // Update via API if logged in
            if (typeof CartAPI !== 'undefined' && typeof AuthAPI !== 'undefined' && AuthAPI.isLoggedIn()) {
                const response = await CartAPI.update(productId, newQuantity);
                if (response.success) {
                    window.location.reload(); // Reload to update cart
                } else {
                    throw new Error(response.error || 'Failed to update quantity');
                }
            } else if (typeof updateCartItemQuantity === 'function') {
                // Fallback to data.js function
                await updateCartItemQuantity(productId, newQuantity);
                window.location.reload();
            } else {
                // Fallback: update localStorage
                const cart = JSON.parse(localStorage.getItem('cart') || '[]');
                const item = cart.find(i => String(i.productId) === String(productId));
                if (item) {
                    item.quantity = newQuantity;
                    localStorage.setItem('cart', JSON.stringify(cart));
                    window.location.reload();
                }
            }
        } catch (error) {
            console.error('Error updating cart quantity:', error);
            alert('Failed to update quantity: ' + error.message);
        }
    }
    
    async function removeFromCart(productId) {
        try {
            if (typeof CartAPI !== 'undefined' && typeof AuthAPI !== 'undefined' && AuthAPI.isLoggedIn()) {
                const response = await CartAPI.remove(productId);
                if (response.success) {
                    window.location.reload(); // Reload to update cart
                } else {
                    throw new Error(response.error || 'Failed to remove item');
                }
            } else if (typeof window.removeFromCart === 'function' && window.removeFromCart !== removeFromCart) {
                // Fallback to data.js function (if it exists globally and is different)
                await window.removeFromCart(productId);
                window.location.reload();
            } else {
                // Fallback: remove from localStorage
                const cart = JSON.parse(localStorage.getItem('cart') || '[]');
                const filtered = cart.filter(item => String(item.productId) !== String(productId));
                localStorage.setItem('cart', JSON.stringify(filtered));
                window.location.reload();
            }
        } catch (error) {
            console.error('Error removing from cart:', error);
            alert('Failed to remove item from cart: ' + error.message);
        }
    }
    
    async function clearCart() {
        if (confirm('Are you sure you want to clear your cart?')) {
            try {
                if (typeof CartAPI !== 'undefined' && typeof AuthAPI !== 'undefined' && AuthAPI.isLoggedIn()) {
                    const response = await CartAPI.clear();
                    if (response.success) {
                        window.location.reload(); // Reload to update cart
                    } else {
                        throw new Error(response.error || 'Failed to clear cart');
                    }
                } else if (typeof window.clearCart === 'function' && window.clearCart !== clearCart) {
                    // Fallback to data.js function (if it exists globally and is different)
                    window.clearCart();
                    window.location.reload();
                } else {
                    // Fallback: clear localStorage
                    localStorage.removeItem('cart');
                    window.location.reload();
                }
            } catch (error) {
                console.error('Error clearing cart:', error);
                alert('Failed to clear cart: ' + error.message);
            }
        }
    }
</script>
