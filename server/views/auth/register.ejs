<%- include('../partials/head.ejs', { title: typeof title !== 'undefined' ? title : 'Register - SOLARA' }) %>

<%- include('../partials/nav.ejs', { currentPage: 'register' }) %>

    <main class="auth-container">
        <div class="auth-card">
            <div class="auth-header">
                <h1>Create Account</h1>
                <p>Join our fashion community and start shopping</p>
            </div>
            
            <% if (typeof error !== 'undefined' && error) { %>
                <div class="error-message" style="display: block; margin-bottom: 1rem; padding: 1rem; background: #fee; color: #c33; border-radius: 8px;">
                    <%= error %>
                </div>
            <% } %>
            
            <form class="auth-form" id="register-form" action="/api/auth/register" method="POST">
                <div class="form-row">
                    <div class="form-group">
                        <label for="firstName">First Name</label>
                        <div class="input-group">
                            <i class="fas fa-user"></i>
                            <input type="text" id="firstName" name="firstName" placeholder="First name" required>
                        </div>
                        <span class="error-message" id="firstName-error"></span>
                    </div>
                    
                    <div class="form-group">
                        <label for="lastName">Last Name</label>
                        <div class="input-group">
                            <i class="fas fa-user"></i>
                            <input type="text" id="lastName" name="lastName" placeholder="Last name" required>
                        </div>
                        <span class="error-message" id="lastName-error"></span>
                    </div>
                </div>
                
                <div class="form-group">
                    <label for="email">Email Address</label>
                    <div class="input-group">
                        <i class="fas fa-envelope"></i>
                        <input type="email" id="email" name="email" placeholder="Enter your email" required>
                    </div>
                    <span class="error-message" id="email-error"></span>
                </div>
                
                <div class="form-group">
                    <label for="phone">Phone Number</label>
                    <div class="input-group">
                        <i class="fas fa-phone"></i>
                        <input type="tel" id="phone" name="phone" placeholder="Enter your phone number" required>
                    </div>
                    <span class="error-message" id="phone-error"></span>
                </div>
                
                <div class="form-group">
                    <label for="password">Password</label>
                    <div class="input-group">
                        <i class="fas fa-lock"></i>
                        <input type="password" id="password" name="password" placeholder="Create a password" required>
                        <button type="button" class="password-toggle" id="password-toggle">
                            <i class="fas fa-eye"></i>
                        </button>
                    </div>
                    <span class="error-message" id="password-error"></span>
                </div>
                
                <div class="form-group">
                    <label for="confirmPassword">Confirm Password</label>
                    <div class="input-group">
                        <i class="fas fa-lock"></i>
                        <input type="password" id="confirmPassword" name="confirmPassword" placeholder="Confirm your password" required>
                        <button type="button" class="password-toggle" id="confirm-password-toggle">
                            <i class="fas fa-eye"></i>
                        </button>
                    </div>
                    <span class="error-message" id="confirmPassword-error"></span>
                </div>
                
                <button type="submit" class="btn btn-primary btn-full">
                    <i class="fas fa-user-plus"></i>
                    Create Account
                </button>
                
                <div class="form-message" id="register-message"></div>
            </form>
            
            <div class="auth-footer">
                <p>Already have an account? <a href="/login">Sign in here</a></p>
            </div>
        </div>
    </main>

<%- include('../partials/footer.ejs') %>

<script>
    // Simple helper for real-time field validation
    function addLiveValidation(inputId, errorId, options) {
        const input = document.getElementById(inputId);
        const errorEl = document.getElementById(errorId);
        if (!input || !errorEl) return;

        const hintColor = '#777';
        const errorColor = '#c33';
        const hintText = options.hint || '';

        // Show base hint initially
        if (hintText) {
            errorEl.textContent = hintText;
            errorEl.style.color = hintColor;
        }

        function validate() {
            const value = input.value.trim();
            // Empty: show hint, no red error yet
            if (!value) {
                errorEl.textContent = hintText;
                errorEl.style.color = hintColor;
                return true;
            }

            if (options.validator) {
                const result = options.validator(value);
                if (result === true) {
                    errorEl.textContent = '';
                    return true;
                }
                if (typeof result === 'string') {
                    errorEl.textContent = result;
                    errorEl.style.color = errorColor;
                    return false;
                }
            }

            if (options.pattern && !options.pattern.test(value)) {
                errorEl.textContent = options.message || 'Invalid value';
                errorEl.style.color = errorColor;
                return false;
            }

            errorEl.textContent = '';
            return true;
        }

        input.addEventListener('input', validate);
        input.addEventListener('blur', validate);

        return validate;
    }

    // Handle form submission with AJAX
    document.getElementById('register-form').addEventListener('submit', async function(e) {
        e.preventDefault();
        
        const form = this;
        const submitButton = form.querySelector('button[type="submit"]');
        const messageDiv = document.getElementById('register-message');
        
        // Get form data
        const formData = new FormData(form);
        const data = Object.fromEntries(formData);
        
        // Clear previous messages
        messageDiv.textContent = '';
        messageDiv.className = 'form-message';
        
        // Validate passwords match (final guard)
        if (data.password !== data.confirmPassword) {
            messageDiv.textContent = 'Passwords do not match';
            messageDiv.className = 'form-message error';
            messageDiv.style.display = 'block';
            messageDiv.style.color = '#c33';
            messageDiv.style.background = '#fee';
            submitButton.disabled = false;
            submitButton.innerHTML = originalButtonText;
            return;
        }
        
        // Show loading state
        const originalButtonText = submitButton.innerHTML;
        submitButton.disabled = true;
        submitButton.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Creating Account...';
        
        try {
            // Prepare registration data
            const registerData = {
                firstName: data.firstName.trim(),
                lastName: data.lastName.trim(),
                email: data.email.trim(),
                phone: data.phone.trim(),
                password: data.password,
                confirmPassword: data.confirmPassword
            };
            
            // Try using AuthAPI if available
            let response;
            if (typeof AuthAPI !== 'undefined' && typeof window.AuthAPI !== 'undefined') {
                response = await AuthAPI.register(registerData);
            } else {
                // Fallback: Submit form directly to server (will sync to MongoDB)
                const fetchResponse = await fetch('/api/auth/register', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    credentials: 'include',
                    body: JSON.stringify(registerData)
                });
                response = await fetchResponse.json();
            }
            
            if (response && response.success) {
                messageDiv.textContent = 'Account created successfully! Redirecting...';
                messageDiv.className = 'form-message success';
                messageDiv.style.color = '#0a0';
                messageDiv.style.background = '#efe';
                messageDiv.style.border = '1px solid #0a0';
                
                // Update UI
                if (response.data && response.data.user) {
                    localStorage.setItem('currentUser', JSON.stringify(response.data.user));
                    if (response.data.token) {
                        localStorage.setItem('authToken', response.data.token);
                    }
                }
                
                // Redirect after a short delay
                setTimeout(() => {
                    window.location.href = '/';
                }, 1000);
            } else {
                // Handle validation errors
                let errorMessage = response.error || response.message || 'Registration failed. Please try again.';
                
                if (response.errors && Array.isArray(response.errors)) {
                    // Show all validation errors
                    const errorList = response.errors.map(err => {
                        const field = err.field || '';
                        return `${field.charAt(0).toUpperCase() + field.slice(1)}: ${err.message}`;
                    }).join('<br>');
                    errorMessage = errorList;
                }
                
                messageDiv.innerHTML = errorMessage;
                messageDiv.className = 'form-message error';
                messageDiv.style.color = '#c33';
                messageDiv.style.background = '#fee';
                messageDiv.style.border = '1px solid #c33';
                submitButton.disabled = false;
                submitButton.innerHTML = originalButtonText;
            }
        } catch (error) {
            console.error('Registration error:', error);
            let errorMessage = error.message || 'Registration failed. Please check your connection and try again.';
            
            // Try to extract error details from response
            if (error.response) {
                try {
                    const errorData = await error.response.json();
                    if (errorData.errors && Array.isArray(errorData.errors)) {
                        errorMessage = errorData.errors.map(err => {
                            const field = err.field || '';
                            return `${field.charAt(0).toUpperCase() + field.slice(1)}: ${err.message}`;
                        }).join('<br>');
                    } else if (errorData.error) {
                        errorMessage = errorData.error;
                    }
                } catch (e) {
                    // Ignore JSON parse errors
                }
            }
            
            messageDiv.innerHTML = errorMessage;
            messageDiv.className = 'form-message error';
            messageDiv.style.color = '#c33';
            messageDiv.style.background = '#fee';
            messageDiv.style.border = '1px solid #c33';
            submitButton.disabled = false;
            submitButton.innerHTML = originalButtonText;
        }
    });
    
    // Password toggle + real-time validation
    document.addEventListener('DOMContentLoaded', function() {
        const passwordToggle = document.getElementById('password-toggle');
        const passwordInput = document.getElementById('password');
        const confirmPasswordToggle = document.getElementById('confirm-password-toggle');
        const confirmPasswordInput = document.getElementById('confirmPassword');
        
        if (passwordToggle && passwordInput) {
            passwordToggle.addEventListener('click', function() {
                const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
                passwordInput.setAttribute('type', type);
                
                // Toggle icon
                const icon = passwordToggle.querySelector('i');
                if (icon) {
                    icon.classList.toggle('fa-eye');
                    icon.classList.toggle('fa-eye-slash');
                }
            });
        }
        
        if (confirmPasswordToggle && confirmPasswordInput) {
            confirmPasswordToggle.addEventListener('click', function() {
                const type = confirmPasswordInput.getAttribute('type') === 'password' ? 'text' : 'password';
                confirmPasswordInput.setAttribute('type', type);
                
                // Toggle icon
                const icon = confirmPasswordToggle.querySelector('i');
                if (icon) {
                    icon.classList.toggle('fa-eye');
                    icon.classList.toggle('fa-eye-slash');
                }
            });
        }

        // Real-time validation rules
        const emailValidator = addLiveValidation('email', 'email-error', {
            pattern: /^[^\s@]+@[^\s@]+\.[^\s@]+$/,
            message: 'Please enter a valid email (e.g. name@example.com)',
            hint: 'Use a valid email like name@example.com'
        });

        const phoneValidator = addLiveValidation('phone', 'phone-error', {
            pattern: /^\+?\d{10,15}$/,
            message: 'Phone must be 10–15 digits (e.g. +201149957822)',
            hint: 'Format: +201149957822 or 01149957822 (10–15 digits)'
        });

        const firstNameValidator = addLiveValidation('firstName', 'firstName-error', {
            validator: (v) => v.length >= 2 || 'First name must be at least 2 characters',
            hint: 'At least 2 letters'
        });

        const lastNameValidator = addLiveValidation('lastName', 'lastName-error', {
            validator: (v) => v.length >= 2 || 'Last name must be at least 2 characters',
            hint: 'At least 2 letters'
        });

        const passwordValidator = addLiveValidation('password', 'password-error', {
            validator: (v) => {
                if (v.length < 8) return 'Password must be at least 8 characters';
                if (!/(?=.*[a-z])(?=.*[A-Z])(?=.*\d)/.test(v)) {
                    return 'Include uppercase, lowercase, and a number';
                }
                return true;
            },
            hint: 'Min 8 chars, with uppercase, lowercase, and a number'
        });

        const confirmValidator = addLiveValidation('confirmPassword', 'confirmPassword-error', {
            validator: (v) => {
                const pwd = document.getElementById('password')?.value || '';
                if (!v) return 'Please confirm your password';
                if (v !== pwd) return 'Passwords do not match';
                return true;
            },
            hint: 'Must match the password above'
        });
    });
</script>

